---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
import AboutMe from "../components/AboutMe.astro"
import Badge from '../components/Badge.astro';
import Hero from "../components/Hero.astro"
import SectionContainer from "../components/SectionContainer.astro"
import Experience from "../components/Experience.astro"
import TitleSection from "../components/TitleSection.astro"
import Briefcase from "../assets/Briefcase.astro"
import Projects from "../components/Projects.astro"
import CodeIcon from "../assets/Code.astro"
import ProfileCheck from "../assets/ProfileCheck.astro"
import Contact from "../components/Contact.astro"
---

<Layout title="Porfolio de Rafael" description="">
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer>

    <div class="space-y-24">
      <SectionContainer id="experiencia">
        <TitleSection>
          <Briefcase class="size-8" />
          Experiencia laboral
        </TitleSection>
        <Experience />
      </SectionContainer>

      <SectionContainer id="proyectos">
        <TitleSection>
          <CodeIcon class="size-7" />
          Proyectos
        </TitleSection>
        <Projects />
      </SectionContainer>

      <SectionContainer id="sobre-mi">
        <TitleSection>
          <ProfileCheck class="size-8" />
          Sobre mí
        </TitleSection>
        <AboutMe />
      </SectionContainer>

      <!-- Nueva sección de contacto -->
      <SectionContainer id="contacto">
        <Contact />
      </SectionContainer>
    </div>
  </main>
</Layout>

