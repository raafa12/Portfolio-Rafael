---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap");
    </style>
  </head>
  <body class="bg-gray-100 dark:bg-[#0a0b14] text-gray-900 dark:text-white font-[Inter]">
    <!-- Starfield Background -->
    <div class="starfield-container"></div>
    
    <!-- Nebula Effects -->
    <div class="nebula nebula-1"></div>
    <div class="nebula nebula-2"></div>
    <div class="nebula nebula-3"></div>
    
    <!-- Constellation Lines -->
    <div class="constellation-lines"></div>
    
    <!-- Floating Particles -->
    <div class="space-particle particle-1"></div>
    <div class="space-particle particle-2"></div>
    <div class="space-particle particle-3"></div>
    <div class="space-particle particle-4"></div>
    <div class="space-particle particle-5"></div>
    <div class="space-particle particle-6"></div>
    
    <div class="relative z-10 min-h-screen flex flex-col">
      <Header />
      <main class="flex-grow">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>