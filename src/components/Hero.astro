---
import Badge from "../components/Badge.astro"
import LinkedInIcon from "../assets/Linkedln.astro"
import MailIcon from "../assets/Mail.astro"
import SocialPill from "../components/SocialPill.astro"
import GithubIcon from "../assets/Github.astro"
import InstagramIcon from "../assets/Instagram.astro"
---

<div class="max-w-3xl mx-auto text-center md:text-left pt-4">
  <div class="flex flex-col items-center md:flex-row gap-3 mb-4">
    <img
      class="rounded-full shadow-xl size-24 md:size-28 border-2 border-[#51E4B8] hover:border-[#21554E] transition-all duration-300"
      src="/images/merounded.png"
      alt="Foto de perfil de Rafael"
    />
    <Badge>Disponible para trabajar</Badge>
  </div>

  <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-green-800 dark:text-green-100 leading-tight">
    Rafael Basanta González
  </h1>
  <p class="mt-4 text-lg md:text-xl leading-relaxed text-gray-800 dark:text-gray-300">
    +4 años de experiencia como <strong class="text-green-700 dark:text-green-300 font-semibold">Desarrollador Full-Stack</strong>. <br class="hidden md:block">Residente en España. Creo experiencias digitales funcionales y atractivas.
  </p>

  <nav class="flex flex-wrap justify-center md:justify-start gap-3 mt-6">
    <SocialPill href="mailto:rafabasanta@hotmail.com">
      <MailIcon class="size-4" />
      Email
    </SocialPill>
    <SocialPill href="https://github.com/raafa12">
      <GithubIcon class="size-4" />
      GitHub
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/rafael-basanta-gonz%C3%A1lez-755b092a6/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://www.instagram.com/rafabasanta/">
      <InstagramIcon class="size-4" />
      Instagram
    </SocialPill>
  </nav>
</div>